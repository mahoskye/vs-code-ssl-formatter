{
    "name": "STARLIMS Scripting Language",
    "scopeName": "source.ssl",
    "patterns": [
        { "include": "#keywords" },
        { "include": "#strings" },
        { "include": "#comments" },
        { "include": "#functions" },
        { "include": "#arrays" },
        { "include": "#variables" },
        { "include": "#operators" },
        { "include": "#logical-operators" },
        { "include": "#built-in-literals" },
        { "include": "#numbers" },
        { "include": "#indexers" },
        { "include": "#property-access" },
        { "include": "#sql-statements" },
        { "include": "#bitwise-functions" }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.ssl",
                    "match": "(?<!\\w)(:IF|:ELSE|:ENDIF|:WHILE|:ENDWHILE|:EXITWHILE|:FOR|:TO|:NEXT|:EXITFOR|:BEGINCASE|:CASE|:OTHERWISE|:EXITCASE|:ENDCASE|:RETURN|:INCLUDE|:DECLARE|:PARAMETERS|:PROCEDURE|:ENDPROC|:PUBLIC|:LOOP|:LABEL|:REGION|:ENDREGION|:CLASS|:INHERIT|:ERROR|:TRY|:CATCH|:FINALLY|:ENDTRY|:DEFAULT|:BEGININLINECODE|:ENDINLINECODE)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.ssl",
                    "begin": "\"",
                    "end": "\""
                },
                {
                    "name": "string.quoted.single.ssl",
                    "begin": "'",
                    "end": "'"
                },
                {
                    "name": "string.quoted.other.ssl",
                    "begin": "\\[",
                    "end": "\\]"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.ssl",
                    "begin": "/\\*",
                    "end": ";"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.general.ssl",
                    "match": "(?i)\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
                },
                {
                    "name": "support.function.special.ssl",
                    "match": "\\b(DoProc|ExecFunction|ExecUDF|Branch)\\s*\\("
                },
                {
                    "name": "support.function.database.ssl",
                    "match": "\\b(SqlExecute|LSearch)\\s*\\("
                },
                {
                    "name": "support.function.object.ssl",
                    "match": "\\b(CreateUDObject)\\s*\\("
                }
            ]
        },
        "arrays": {
            "patterns": [
                {
                    "match": "(\\{)([^}]*)(\\})",
                    "captures": {
                        "1": { "name": "punctuation.definition.array.begin.ssl" },
                        "2": { "name": "meta.array.contents.ssl" },
                        "3": { "name": "punctuation.definition.array.end.ssl" }
                    }
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.ssl",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.ssl",
                    "match": "(:=|\\+|\\-|\\*|\\/|\\%|\\^|\\>|\\<|\\>=|\\<=|\\=\\=|=|\\<\\>|\\!\\=|\\.|\\:|\\+=|\\-=|\\*=|\\/=|\\%=|\\^=|\\+\\+|\\-\\-)"
                }
            ]
        },
        "logical-operators": {
            "patterns": [
                {
                    "name": "keyword.operator.logical.ssl",
                    "match": "\\b(\\.AND\\.|\\.(OR)\\.|\\.(NOT)\\.)\\b"
                }
            ]
        },
        "built-in-literals": {
            "patterns": [
                {
                    "name": "constant.language.boolean.ssl",
                    "match": "\\b(\\.T\\.|\\.F\\.)\\b"
                },
                {
                    "name": "constant.language.nil.ssl",
                    "match": "\\bNIL\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.decimal.ssl",
                    "match": "\\b([0-9]+(\\.[0-9]+)?([eE][-]?[0-9]+)?|\\.[0-9]+([eE][-]?[0-9]+)?)\\b"
                }
            ]
        },
        "indexers": {
            "patterns": [
                {
                    "match": "(\\[)([^\\]]*)(\\])",
                    "captures": {
                        "1": { "name": "punctuation.squarebracket.open.ssl" },
                        "2": { "name": "meta.indexer.ssl" },
                        "3": { "name": "punctuation.squarebracket.close.ssl" }
                    }
                }
            ]
        },
        "sql-statements": {
            "patterns": [
                {
                    "match": "(\\?)([a-zA-Z_][a-zA-Z0-9_]*)(\\?)",
                    "captures": {
                        "1": { "name": "constant.character.sql.parameter.delimiter.ssl" },
                        "2": { "name": "variable.parameter.sql.ssl" },
                        "3": { "name": "constant.character.sql.parameter.delimiter.ssl" }
                    }
                },
                {
                    "match": "(\\?)",
                    "name": "constant.character.sql.parameter.placeholder.ssl"
                }
            ]
        },
        "bitwise-functions": {
            "patterns": [
                {
                    "name": "support.function.bitwise.ssl",
                    "match": "\\b(_AND|_OR|_XOR|_NOT)\\s*\\("
                }
            ]
        }
    }
}
